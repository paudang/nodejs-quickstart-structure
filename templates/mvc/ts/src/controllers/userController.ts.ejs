import { Request, Response } from 'express';
import User from '@/models/User';
import { HTTP_STATUS } from '@/utils/httpCodes';
import logger from '@/utils/logger';
<%_ if (caching === 'Redis') { -%>
import redis from '@/config/redisClient';
<%_ } -%>

export class UserController {
    async getUsers(req: Request, res: Response) {
        try {
<%_ if (caching === 'Redis') { -%>
            const cacheKey = 'users:all';
            const cachedUsers = await redis.get(cacheKey);

            if (cachedUsers) {
                logger.info('Serving users from cache');
                return res.json(JSON.parse(cachedUsers));
            }
<%_ } -%>
<%_ if (database === 'MongoDB') { -%>
            const users = await User.find();
<%_ } else if (database === 'None') { -%>
            const users = User.mockData;
<%_ } else { -%>
            const users = await User.findAll();
<%_ } -%>
<%_ if (caching === 'Redis') { -%>
            // Cache for 60 seconds
            await redis.set(cacheKey, JSON.stringify(users), 'EX', 60);
<%_ } -%>
            res.json(users);
        } catch (error) {
            logger.error('Error fetching users:', error);
            if (error instanceof Error) {
                res.status(HTTP_STATUS.INTERNAL_SERVER_ERROR).json({ error: error.message });
            } else {
                res.status(HTTP_STATUS.INTERNAL_SERVER_ERROR).json({ error: 'Unknown error occurred' });
            }
        }
    }

    async createUser(req: Request, res: Response) {
        try {
            const { name, email } = req.body;
<%_ if (database === 'None') { -%>
            const newUser = { id: String(User.mockData.length + 1), name, email };
            User.mockData.push(newUser);
<%_ if (caching === 'Redis') { -%>
            await redis.del('users:all');
<%_ } -%>
            res.status(HTTP_STATUS.CREATED).json(newUser);
<%_ } else { -%>
            const user = await User.create({ name, email });
<%_ if (caching === 'Redis') { -%>
            await redis.del('users:all');
<%_ } -%>
            res.status(HTTP_STATUS.CREATED).json(user);
<%_ } -%>
        } catch (error) {
            logger.error('Error creating user:', error);
            if (error instanceof Error) {
                res.status(HTTP_STATUS.INTERNAL_SERVER_ERROR).json({ error: error.message });
            } else {
                res.status(HTTP_STATUS.INTERNAL_SERVER_ERROR).json({ error: 'Unknown error occurred' });
            }
        }
    }
}

