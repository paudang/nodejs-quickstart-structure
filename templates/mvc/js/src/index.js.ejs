const express = require('express');
const cors = require('cors');
require('dotenv').config();
<% if (communication === 'REST APIs') { %>const apiRoutes = require('./routes/api');<% } %>
<% if (communication === 'Kafka') { %>const { connectKafka, sendMessage } = require('./services/kafkaService');<% } %>

const app = express();
const PORT = process.env.PORT || 3000;

app.use(cors());
app.use(express.json());

<% if (viewEngine === 'EJS' || viewEngine === 'Pug') { %>
// View Engine Setup
const path = require('path');
app.set('views', path.join(__dirname, 'views'));
app.set('view engine', '<%= viewEngine.toLowerCase() %>');
<% } %>

// Routes
<% if (communication === 'REST APIs' || (viewEngine && viewEngine !== 'None')) { %>app.use('/api', apiRoutes);<% } %>
<% if (viewEngine && viewEngine !== 'None') { %>
app.get('/', (req, res) => {
  res.render('index', { 
    projectName: 'NodeJS Service',
    architecture: 'MVC',
    database: '<%= database %>',
    communication: '<%= communication %>'
  });
});
<% } %>

app.get('/health', (req, res) => {
  res.json({ status: 'UP' });
});

app.listen(PORT, async () => {
  console.log(`Server running on port ${PORT}`);
  <% if (communication === 'Kafka') { %>
  try {
    await connectKafka();
    console.log('Kafka connected');
    // Demo: Send a test message
    await sendMessage('test-topic', 'Hello Kafka from MVC JS!');
  } catch (err) {
    console.error('Failed to connect to Kafka:', err);
  }
  <% } %>
});