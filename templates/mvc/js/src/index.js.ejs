<% } -%>

// Routes
<% if (communication === 'REST APIs' || (viewEngine && viewEngine !== 'None')) { -%>
app.use('/api', apiRoutes);
<% } -%>
<% if (viewEngine && viewEngine !== 'None') { -%>
app.get('/', (req, res) => {
  res.render('index', { 
    projectName: 'NodeJS Service',
    architecture: 'MVC',
    database: '<%= database %>',
    communication: '<%= communication %>'
  });
});
<% } -%>

app.get('/health', (req, res) => {
  res.json({ status: 'UP' });
});

// Database Sync
const syncDatabase = async () => {
    let retries = 30;
    while (retries) {
        try {
            const sequelize = require('./config/database');
            await sequelize.sync();
            console.log('Database synced');
            
            // Start Server after DB is ready
            app.listen(PORT, async () => {
              console.log(`Server running on port ${PORT}`);
              <% if (communication === 'Kafka') { %>
              try {
                await connectKafka();
                console.log('Kafka connected');
                // Demo: Send a test message
                await sendMessage('test-topic', 'Hello Kafka from MVC JS!');
              } catch (err) {
                console.error('Failed to connect to Kafka:', err);
              }
              <% } -%>
            });
            break;
        } catch (err) {
            console.error('Database sync failed:', err);
            retries -= 1;
            console.log(`Retries left: ${retries}. Waiting 5s...`);
            await new Promise(res => setTimeout(res, 5000));
        }
    }
};

syncDatabase();