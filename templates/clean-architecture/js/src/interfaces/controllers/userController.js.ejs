const CreateUser = require('../../usecases/CreateUser');
const GetAllUsers = require('../../usecases/GetAllUsers');
const UserRepository = require('../../infrastructure/repositories/UserRepository');
<% if (communication !== 'GraphQL') { -%>
const HTTP_STATUS = require('../../utils/httpCodes');
<% } -%>
const logger = require('../../infrastructure/log/logger');

class UserController {
    constructor() {
        this.userRepository = new UserRepository();
        this.createUserUseCase = new CreateUser(this.userRepository);
        this.getAllUsersUseCase = new GetAllUsers(this.userRepository);
    }

<% if (communication === 'GraphQL') { -%>
    async getUsers() {
        try {
            return await this.getAllUsersUseCase.execute();
        } catch (error) {
            logger.error('Error getting users:', error);
            throw error;
        }
    }

    async createUser(data) {
        const { name, email } = data;
        try {
            return await this.createUserUseCase.execute(name, email);
        } catch (error) {
            logger.error('Error creating user:', error);
            throw error;
        }
    }
<% } else { -%>
    getUsers(req, res) {
        this.getAllUsersUseCase.execute()
            .then(users => res.json(users))
            .catch(err => {
                logger.error('Error getting users:', err);
                res.status(HTTP_STATUS.INTERNAL_SERVER_ERROR).json({ error: err.message });
            });
    }

    async createUser(req, res) {
        const { name, email } = req.body;
        try {
            const user = await this.createUserUseCase.execute(name, email);
            res.status(HTTP_STATUS.CREATED).json(user);
        } catch (error) {
            logger.error('Error creating user:', error);
            res.status(HTTP_STATUS.BAD_REQUEST).json({ error: error.message });
        }
    }
<% } -%>
}

module.exports = UserController;
