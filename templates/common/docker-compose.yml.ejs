version: '3.8'

services:
  app:
    build: .
    ports:
      - "${PORT:-3000}:3000"
    depends_on:
      - db
<% if (communication === 'Kafka') { %>      - kafka
<% } -%>
<% if (communication === 'Kafka') { %>    environment:
      - KAFKA_BROKER=kafka:29092
      - KAFKAJS_NO_PARTITIONER_WARNING=1
      - PORT=3000
      - DB_HOST=db
<% if (database === 'MySQL') { %>      - DB_USER=root
      - DB_PASSWORD=root
      - DB_NAME=<%= dbName %>
<% } %><% if (database === 'PostgreSQL') { %>      - DB_USER=postgres
      - DB_PASSWORD=root
      - DB_NAME=<%= dbName %>
<% } -%>
<% } else { %>
    environment:
      - PORT=3000
      - DB_HOST=db
<% if (database === 'MySQL') { %>      - DB_USER=root
      - DB_PASSWORD=root
      - DB_NAME=<%= dbName %>
<% } %><% if (database === 'PostgreSQL') { %>      - DB_USER=postgres
      - DB_PASSWORD=root
      - DB_NAME=<%= dbName %>
<% } -%>
<% } %>
  db:
<% if (database === 'MySQL') { %>    image: mysql:8.0
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: <%= dbName %>
    ports:
      - "${DB_PORT:-3306}:3306"
    volumes:
      - ./flyway/sql:/docker-entrypoint-initdb.d
<% } else if (database === 'PostgreSQL') { %>    image: postgres:15
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: root
      POSTGRES_DB: <%= dbName %>
    ports:
      - "${DB_PORT:-5432}:5432"
    volumes:
      - ./flyway/sql:/docker-entrypoint-initdb.d
<% } else if (database === 'MongoDB') { %>    image: mongo:latest
    restart: always
    environment:
      MONGO_INITDB_DATABASE: <%= dbName %>
    ports:
      - "${DB_PORT:-27017}:27017"
    volumes:
      - mongodb_data:/data/db
<% } %>
<% if (database !== 'MongoDB') { %>
  flyway:
    image: flyway/flyway
    command: -connectRetries=60 migrate
    volumes:
      - ./flyway/sql:/flyway/sql
    environment:
<% if (database === 'MySQL') { %>      FLYWAY_URL: jdbc:mysql://db:3306/<%= dbName %>
      FLYWAY_USER: root
      FLYWAY_PASSWORD: root
<% } %><% if (database === 'PostgreSQL') { %>      FLYWAY_URL: jdbc:postgresql://db:5432/<%= dbName %>
      FLYWAY_USER: postgres
      FLYWAY_PASSWORD: root
<% } %>    depends_on:
      - db
<% } %>
<% if (communication === 'Kafka') { %>  zookeeper:
    image: confluentinc/cp-zookeeper:7.4.0
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_TICK_TIME: 2000
    ports:
      - "${ZOOKEEPER_PORT:-2181}:2181"

  kafka:
    image: confluentinc/cp-kafka:7.4.0
    depends_on:
      - zookeeper
    ports:
      - "${KAFKA_PORT:-9092}:9092"
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka:29092,PLAINTEXT_HOST://localhost:9092
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
<% } -%>
volumes:
  <%= database.toLowerCase() %>_data:
