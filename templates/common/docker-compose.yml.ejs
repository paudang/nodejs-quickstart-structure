services:
  app:
    build: .
    ports:
      - "${PORT:-3000}:3000"
<%_ if (database !== 'None' || communication === 'Kafka') { -%>
    depends_on:
<%_ if (database !== 'None') { -%>
      - db
<%_ } -%>
<%_ if (communication === 'Kafka') { -%>
      - kafka
<%_ } -%>
<%_ } -%>
<%_ if (communication === 'Kafka') { -%>
    environment:
      - KAFKA_BROKER=kafka:29092
      - KAFKAJS_NO_PARTITIONER_WARNING=1
      - PORT=3000
<%_ if (database !== 'None') { -%>
      - DB_HOST=db
<%_ if (database === 'MySQL') { -%>
      - DB_USER=root
      - DB_PASSWORD=root
      - DB_NAME=<%= dbName %>
<%_ } -%><%_ if (database === 'PostgreSQL') { -%>
      - DB_USER=postgres
      - DB_PASSWORD=root
      - DB_NAME=<%= dbName %>
<%_ } -%>
<%_ } -%>
<%_ } else { -%>
    environment:
      - PORT=3000
<%_ if (database !== 'None') { -%>
      - DB_HOST=db
<%_ if (database === 'MySQL') { -%>
      - DB_USER=root
      - DB_PASSWORD=root
      - DB_NAME=<%= dbName %>
<%_ } -%><%_ if (database === 'PostgreSQL') { -%>
      - DB_USER=postgres
      - DB_PASSWORD=root
      - DB_NAME=<%= dbName %>
<%_ } -%>
<%_ } -%>
<%_ } -%>
<%_ if (database !== 'None') { -%>
  db:
<%_ if (database === 'MySQL') { -%>
    image: mysql:8.0
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: <%= dbName %>
    ports:
      - "${DB_PORT:-3306}:3306"
    volumes:
      - ./flyway/sql:/docker-entrypoint-initdb.d
<%_ } else if (database === 'PostgreSQL') { -%>
    image: postgres:15
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: root
      POSTGRES_DB: <%= dbName %>
    ports:
      - "${DB_PORT:-5432}:5432"
    volumes:
      - ./flyway/sql:/docker-entrypoint-initdb.d
<%_ } else if (database === 'MongoDB') { -%>
    image: mongo:latest
    restart: always
    environment:
      MONGO_INITDB_DATABASE: <%= dbName %>
    ports:
      - "${DB_PORT:-27017}:27017"
    volumes:
      - mongodb_data:/data/db

  mongo-migrate:
    image: node:18-alpine
    working_dir: /app
    volumes:
      - .:/app
    command: sh -c "npm install migrate-mongo && npm run migrate"
    environment:
      - DB_HOST=db
      - DB_NAME=<%= dbName %>
    depends_on:
      - db
<%_ } -%>
<%_ } -%>
<%_ if (database !== 'MongoDB' && database !== 'None') { -%>
  flyway:
    image: flyway/flyway
    command: -connectRetries=60 migrate
    volumes:
      - ./flyway/sql:/flyway/sql
    environment:
<%_ if (database === 'MySQL') { -%>
      FLYWAY_URL: jdbc:mysql://db:3306/<%= dbName %>
      FLYWAY_USER: root
      FLYWAY_PASSWORD: root
<%_ } -%><%_ if (database === 'PostgreSQL') { -%>
      FLYWAY_URL: jdbc:postgresql://db:5432/<%= dbName %>
      FLYWAY_USER: postgres
      FLYWAY_PASSWORD: root
<%_ } -%>
    depends_on:
      - db
<%_ } -%>
<%_ if (communication === 'Kafka') { -%>
  zookeeper:
    image: confluentinc/cp-zookeeper:7.4.0
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_TICK_TIME: 2000
    ports:
      - "${ZOOKEEPER_PORT:-2181}:2181"

  kafka:
    image: confluentinc/cp-kafka:7.4.0
    depends_on:
      - zookeeper
    ports:
      - "${KAFKA_PORT:-9092}:9092"
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka:29092,PLAINTEXT_HOST://localhost:9092
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
<%_ } -%>
<%_ if (database !== 'None') { -%>
volumes:
  <%= database.toLowerCase() %>_data:
<%_ } -%>
